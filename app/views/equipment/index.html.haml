- model_class = Equipment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:design_specs)
      %th= model_class.human_attribute_name(:actual_specs)
      %th= model_class.human_attribute_name(:itemcode)
      %th= model_class.human_attribute_name(:installed_at)
      %th= model_class.human_attribute_name(:replaced_at)
      %th= model_class.human_attribute_name(:failure_mode)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @equipment.each do |equipment|
      %tr
        %td= link_to equipment.id, equipment_path(equipment)
        %td= equipment.description
        %td= equipment.design_specs
        %td= equipment.actual_specs
        %td= equipment.itemcode
        %td= equipment.installed_at
        %td= equipment.replaced_at
        %td= equipment.failure_mode
        %td=l equipment.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_equipment_path(equipment), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), equipment_path(equipment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to 'Add Equipment', equipment_creation_path(id: 'select_category'), :class => 'btn btn-primary'
= link_to t('.new', :default => t("helpers.links.new")), new_equipment_path, :class => 'btn btn-primary'
