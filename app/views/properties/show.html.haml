- model_class = Property
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @property.category_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @property.name


= link_to t('.back', :default => t("helpers.links.back")), properties_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_property_path(@property), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), property_path(@property), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
