Searching for :

%ul
  %li Category : #{@search_category}
  %li Location : #{@search_location}
  %li Property : #{@search_property}
  %li Terms : #{@search_term}

%table.table.table-bordered
  %thead
    %th Item Code
    %th Description
    - @category.properties.each do |property|
      %th= "Design " + property.name
  %tbody
    - @products.each do |product|
      %tr
        %td= link_to product.itemcode, product
        %td= link_to product.description, product
        - @category.properties.each do |property|
          %td= product.design_specs[property.design_key]



