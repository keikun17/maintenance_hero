= form_for @specification do |f|
  - if @specification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specification.errors.count, "error")} prohibited this specification from being saved:"
      %ul
        - @specification.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :equipment
    = f.text_field :equipment
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :datatype
    = f.text_field :datatype
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
