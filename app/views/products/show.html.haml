- model_class = Product
.page-header
  %h1 #{@product.category.name} Product

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @product.description

%hr

.row
  .col-md-6

    - @product.properties.design_properties.each do |property_key|
      %p
        %strong= model_class.human_attribute_name(property_key) + ':'
        = @product.send(property_key)

  .col-md-6
    - @product.properties.actual_properties.each do |property_key|
      %p
        %strong= model_class.human_attribute_name(property_key) + ':'
        = @product.send(property_key)

%hr
%p
  %strong= model_class.human_attribute_name(:itemcode) + ':'
  %br
  = @product.itemcode
%p
  %strong= model_class.human_attribute_name(:installed_at) + ':'
  %br
  = @product.installed_at
%p
  %strong= model_class.human_attribute_name(:replaced_at) + ':'
  %br
  = @product.replaced_at
%p
  %strong= model_class.human_attribute_name(:failure_mode) + ':'
  %br
  = @product.failure_mode


= link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
