- model_class = EquipmentField
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:uuid) + ':'
  %br
  = @equipment_field.uuid
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @equipment_field.name
%p
  %strong= model_class.human_attribute_name(:field_type) + ':'
  %br
  = @equipment_field.field_type
%p
  %strong= model_class.human_attribute_name(:equipment_type_id) + ':'
  %br
  = @equipment_field.equipment_type_id
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @equipment_field.position


= link_to t('.back', :default => t("helpers.links.back")), equipment_fields_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_equipment_field_path(@equipment_field), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), equipment_field_path(@equipment_field), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
