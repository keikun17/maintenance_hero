- model_class = FailureMode
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @failure_mode.category_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @failure_mode.name


= link_to t('.back', :default => t("helpers.links.back")), failure_modes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_failure_mode_path(@failure_mode), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), failure_mode_path(@failure_mode), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
